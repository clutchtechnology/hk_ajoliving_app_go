# AJO Living API - Environment Variables

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=debug

# Database Configuration
# 注意：Docker 环境中，DB_HOST 应为 "postgres"（服务名）
# 本地开发使用 "localhost"，Docker 中会被覆盖
DB_DRIVER=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=ajoliving
DB_PASSWORD=secret
DB_NAME=ajoliving_db
DB_SSLMODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# Redis Configuration
# 注意：Docker 环境中，REDIS_HOST 应为 "redis"（服务名）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# Log Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://ajoliving.com-key-change-in-production
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# Third-party Services (OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-east-1
AWS_S3_BUCKET=
