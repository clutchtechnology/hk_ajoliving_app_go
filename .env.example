# AJO Living API - Environment Variables

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=debug

# Database
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=ajoliving
DB_PASSWORD=secret
DB_NAME=ajoliving_db
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# Third-party Services (OAuth)
GOOGLE_CLIENT_ID=
